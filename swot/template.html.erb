        </nav>
      </div>
    </header>
    <main class="">
      <section class="pa2">
      <% [:strengths, :weaknesses, :opportunities, :threats ].each_with_index do |swot_name,i| %>
        <% if i == 0 || i == 2 %>
          <div class="swot-row-ns flex flex-wrap flex-nowrap-ns mb3-ns">
        <% end %>
        <div class="w-100 w-50-ns br2 ma3-ns mt2 <%= swot_name.downcase %>">
          <a name="<%= swot_name %>"></a>
          <h2 class="f2 f1-ns tl tc-ns mv0 pv2 ttu tracked"><%= swot_name.capitalize %></h2>
          <div class="ph3">
            <ul class="list ma0 pa0">
              <% swot[swot_name].each_with_index do |one_swot,i| %>
                <li data-swot="<%= one_swot[:id] %>">
                  <a name="<%= one_swot[:id] %>"></a>
                  <h3 class="lh-title <%= i == 0 ? 'mt1' : '' %>">
                    <%= one_swot[:name] %>
                    <a data-show-link class="f6 fw4 link underline" href="#">why?</a>
                    <a data-permalink class="dn f6 fw4 link underline ml2" href="#<%= one_swot[:id] %>">Permalink</a>
                  </h3>
                  <section class="dn">
                    <% one_swot[:content].each do |p| %>
                      <p class="measure lh-copy center">
                        <%= p %>
                      </p>
                    <% end %>
                    <div class="ml3 measure lh-copy center" data-hide="why_12">
                      (<a data-hide-link class="f6 fw4 link underline" href="#">hide this</a>)
                    </div>
                  </section>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <% if i == 1 || i == 3 %>
          </div>
          <% if i == 1 %>
